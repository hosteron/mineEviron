#!/bin/bash
# COPYRIGHT_CHUNFENG #

PLATFORM_DIR=$(pwd)
echo '## Generated by configure' > config.mk
echo >> config.mk
echo 'ifneq ($(PLATFORM_CONFIG_INCLUDED), yes)' >> config.mk
echo 'PLATFORM_CONFIG_INCLUDED=yes' >> config.mk
echo >> config.mk
echo PLATFORM_DIR=${PLATFORM_DIR} >> config.mk
echo >>config.mk

until [ -z "$1" ]  # Until all parameters used up . . .
do
  echo "$1" >> config.mk
  shift
done

echo "include ${PLATFORM_DIR}/defconfig.mk"  >> config.mk

echo >>config.mk
echo 'endif' >>config.mk

cp doc/git_hook/* ../.git/hooks/
